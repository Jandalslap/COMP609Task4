<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:COMP609Task4.Pages"
             xmlns:models="clr-namespace:COMP609Task4.Models"
             xmlns:viewmodels="clr-namespace:COMP609Task4.ViewModels"
             x:Class="COMP609Task4.Pages.ForecastPage">

    <AbsoluteLayout>
        <!-- Background Image -->
        <Image Source="livestock_image2.jpg" 
               Aspect="AspectFill"
               Opacity="0.2"
               AbsoluteLayout.LayoutBounds="0,0,1,1" 
               AbsoluteLayout.LayoutFlags="All"/>

        <!-- Main Content -->
        <Border Stroke="Black" StrokeThickness="1" Padding="10" Margin="10"
                AbsoluteLayout.LayoutBounds="0,0,1,1" 
                AbsoluteLayout.LayoutFlags="All">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1"/>     <!--row 0, devider-->
                    <RowDefinition Height="Auto"/>  <!--row 1, header-->
                    <RowDefinition Height="1"/>     <!--row 2, devider-->
                    <RowDefinition Height="Auto"/>  <!--row 3, title-->
                    <RowDefinition Height="Auto"/>  <!--row 4, form-->
                    <RowDefinition Height="1"/>     <!--row 5, devider-->
                    <RowDefinition Height="Auto"/>  <!--row 6-->
                    <RowDefinition Height="Auto"/>  <!--row 7-->
                    <RowDefinition Height="*"/>     <!--row 8-->
                    <RowDefinition Height="Auto"/>  <!--row 9-->
                    <RowDefinition Height="Auto"/>  <!--row 10-->
                    <RowDefinition Height="Auto"/>  <!--row 11-->
                    <RowDefinition Height="Auto"/>  <!--row 12-->
                    <RowDefinition Height="Auto"/>  <!--row 13-->   
                    <RowDefinition Height="Auto"/>  <!--row 14-->
                    <RowDefinition Height="Auto"/>  <!--row 15, Footer-->
                </Grid.RowDefinitions>

                <!-- Divider above header -->
                <BoxView Grid.Row="0" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!-- Header -->
                <Grid Grid.Row="1" BackgroundColor="#D3D3D380" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="lms_icon.jpg" 
                           WidthRequest="60" 
                           HeightRequest="60" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Start"/>
                    <Label Text="Forecast" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center" 
                           Grid.Column="1"/>
                    <Button Text="Home" 
                            BackgroundColor="#F0F0F0" 
                            TextColor="Black"
                            Clicked="Home_Clicked"
                            VerticalOptions="Center" 
                            HorizontalOptions="End"
                            FontAttributes="Bold"
                            Grid.Column="2"/>
                </Grid>

                <!-- Divider below header -->
                <BoxView Grid.Row="2" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!--<Grid Grid.Row="3">
                    <StackLayout Grid.Row="5" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Spacing="10" Margin="0,10,0,10">
                        <Label Text="Your stuff goes here" FontSize="24" FontAttributes="Bold"/>
                    </StackLayout>
                </Grid>-->
                
                <StackLayout Grid.Row="3" Padding="10">
                    <Label Text="Estimate future earnings" 
                        FontAttributes="Bold"
                        FontSize="18"
                        Margin="0,0,0,10"
                        HorizontalOptions="Center"/>
                </StackLayout>

                <!--#region Form-->
                <!-- Add New Form fields -->
                <ScrollView Grid.Row="4" Grid.RowSpan="2">
                    <StackLayout Margin="10">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Stock Type Dropdown -->
                            <StackLayout Grid.Column="0" Margin="0,0,10,0">
                                <Label Text="Stock Type:" BackgroundColor="#D3D3D380" Padding="10" FontAttributes="Bold" />
                                <Picker x:Name="StockTypePicker" SelectedIndexChanged="StockTypePicker_SelectedIndexChanged">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Cow</x:String>
                                            <x:String>Sheep</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </StackLayout>

                            <!-- Colour Dropdown -->
                            <StackLayout Grid.Column="1" Margin="0,0,10,0">
                                <Label Text="Colour:" BackgroundColor="#D3D3D380" Padding="10" FontAttributes="Bold" />
                                <Picker x:Name="ColourPicker">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Red</x:String>
                                            <x:String>White</x:String>
                                            <x:String>Black</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </StackLayout>

                            <!-- Cost -->
                            <StackLayout Grid.Column="2" Margin="0,0,10,0">
                                <Label Text="Cost:" BackgroundColor="#D3D3D380" Padding="10" FontAttributes="Bold" />
                                <Entry x:Name="AddCost" Placeholder="Cost"/>
                            </StackLayout>

                            <!-- Weight -->
                            <StackLayout Grid.Column="3" Margin="0,0,10,0">
                                <Label Text="Weight:" BackgroundColor="#D3D3D380" Padding="10" FontAttributes="Bold" />
                                <Entry x:Name="AddWeight" Placeholder="Weight"/>
                            </StackLayout>

                            <!-- Produce field based on stock type -->
                            <StackLayout Grid.Column="4" Margin="0,0,10,0" x:Name="ProduceStackLayout2">
                                <Label x:Name="AddProduceLabel" Text="Milk" BackgroundColor="#D3D3D380" Padding="10" FontAttributes="Bold" VerticalOptions="Center"/>
                                <Entry x:Name="AddProduce" Placeholder="Produce"/>
                            </StackLayout>

                            <!-- Add New and Reset Buttons -->
                            <StackLayout Grid.Column="5" Padding="10" Orientation="Horizontal" VerticalOptions="Start">
                                <Button BackgroundColor="#F0F0F0" FontAttributes="Bold" TextColor="Black" Text="Add New" Clicked="AddNewStock_Clicked" CommandParameter="{Binding .}"/>
                                <Button BackgroundColor="#F0F0F0" FontAttributes="Bold" TextColor="Black" Text="Reset" Clicked="ClearAddNewStock_Clicked" CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </ScrollView>
                <!--#endregion-->

                    <!-- Divider between search ID and form fields -->
                <BoxView Grid.Row="5" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>
                
                <!--INSERT OUTPUT DISPLAY HERE-->
                <!--#region Display-->
                <!-- Fixed header row for columns -->
                <Grid Grid.Row="6" BackgroundColor="#D3D3D380" Padding="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="ID" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="Type" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="Colour" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="Cost" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="4" Text="Milk" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="5" Text="Wool" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="6" Text="Tax" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="7" Text="Income" FontAttributes="Bold" HorizontalOptions="Center"/>
                </Grid>

                <!-- Divider below headings section -->
                <BoxView Grid.Row="7" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!-- Scrollable content -->
                <ScrollView Grid.Row="8">
                    <Grid x:Name="ContentGrid" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!-- Data -->
                        <CollectionView Grid.Row="1" ItemsSource="{Binding ForecastLivestock}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding Id}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="1" Text="{Binding Type}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="2" Text="{Binding Colour}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="3" Text="{Binding Cost}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="4" Text="{Binding Milk, TargetNullValue='-'}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="5" Text="{Binding Wool, TargetNullValue='-'}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="6" Text="{Binding TaxCalculation}" HorizontalOptions="Center"/>
                                        <Label Grid.Column="7" Text="{Binding IncomeCalculation}" HorizontalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </ScrollView>

                <!-- Divider above totals -->
                <BoxView Grid.Row="9" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!-- Totals -->
                <Grid Grid.Row="10" BackgroundColor="#D3D3D380" Padding="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Total:" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="{Binding TotalStockCount}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="{Binding TotalColours}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="{Binding TotalCost, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="4" Text="{Binding TotalMilk, StringFormat='{0} kg'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="5" Text="{Binding TotalWool, StringFormat='{0} kg'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="6" Text="{Binding TotalTax, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="7" Text="{Binding TotalIncome, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                </Grid>

                <!-- Averages -->
                <Grid Grid.Row="11" BackgroundColor="#D3D3D380" Padding="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Avg:" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="{Binding AvgStockDisplay}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="{Binding AvgColoursDisplay}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="{Binding AvgCostDisplay, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="4" Text="{Binding AvgMilkDisplay, StringFormat='{0} kg'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="5" Text="{Binding AvgWoolDisplay, StringFormat='{0} kg'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="6" Text="{Binding AvgTaxDisplay, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="7" Text="{Binding AvgIncomeDisplay, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>


                </Grid>

                <!-- Divider above profit -->
                <BoxView Grid.Row="12" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!-- Profit -->
                <Grid Grid.Row="13" BackgroundColor="#D3D3D380" Padding="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Profit:" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Grid.Column="7" Text="{Binding TotalProfit, StringFormat='${0:F2}'}" FontAttributes="Bold" HorizontalOptions="Center"/>
                </Grid>
                <!--#endregion-->

                    <!-- Divider above footer -->
                <BoxView Grid.Row="14" HeightRequest="1" Color="Black" HorizontalOptions="FillAndExpand"/>

                <!-- Footer -->
                <StackLayout Grid.Row="15" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Spacing="10" Margin="0,10,0,10">
                    <Button BackgroundColor="#F0F0F0" FontAttributes="Bold" TextColor="Black" Text="Finance" Clicked="Finance_Clicked"/>
                </StackLayout>
            </Grid>
        </Border>
    </AbsoluteLayout>

</ContentPage>

